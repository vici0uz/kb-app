    style="@style/welcome_page"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false">

        <Spinner
            android:id="@+id/spinner_lugar"
