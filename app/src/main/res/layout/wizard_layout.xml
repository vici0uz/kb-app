<com.redbooth.WelcomePageLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/welcome_page"
     >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false">

        <EditText
            android:id="@+id/entrada_odometro"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="El odometro marca"
            android:textSize="@dimen/text_size_xxlarge"
            android:background="@color/base_chatter_view_note_background"/>

        <Button
            android:id="@+id/btn_registrar_odometro"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/entrada_odometro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"/>

    </RelativeLayout>
</com.redbooth.WelcomePageLayout>